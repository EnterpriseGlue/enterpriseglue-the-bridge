# =============================================================================
# Voyager / EnterpriseGlue Frontend Configuration
# Copy this file to .env.local (or .env) and fill in your values
# =============================================================================

# Base URL for API calls.
#
# - In local development, the Vite dev server proxy can handle API requests
#   without needing an absolute base URL.
# - In production builds (or non-proxied setups), set this to your backend origin.
VITE_API_BASE_URL=http://localhost:8787

# Feature flags (env-driven)
VITE_FEATURE_VOYAGER=true

VITE_FEATURE_STARBASE=true
VITE_FEATURE_MISSION_CONTROL=true
VITE_FEATURE_ENGINES=true

VITE_FEATURE_MC_PROCESSES=true
VITE_FEATURE_MC_BATCHES=true
VITE_FEATURE_MC_DECISIONS=true

VITE_FEATURE_SB_PROJECTS=true
VITE_FEATURE_SB_FILES=true

VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_USER_MENU=true
